<?xml version="1.0"?>
<!--
###################################################
##Packet Encoder
###################################################
 -->
<block>
    <name>PDU Packet RX</name>
    <key>mac_pdu_packet_rx</key>
    <category>gr-mac</category>
    <import>import mac</import>
    <make>mac.pdu_packet_rx(dewhiten=$dewhiten,
    output_invalid=$output_invalid,
    check_crc=$check_crc
)</make>

    <param>
      <name>Dewhiten</name>
      <key>dewhiten</key>
      <value>True</value>
      <type>enum</type>
      <!--<hide>#if str($dewhiten()) == 'True' then 'none' else 'part'#</hide>-->
      <option>
	<name>Yes</name>
	<key>True</key>
      </option>
      <option>
	<name>No</name>
	<key>False</key>
      </option>
    </param>

    <param>
      <name>Output invalid</name>
      <key>output_invalid</key>
      <value>False</value>
      <type>enum</type>
      <!--<hide>#if str($dewhiten()) == 'True' then 'none' else 'part'#</hide>-->
      <option>
	<name>Yes</name>
	<key>True</key>
      </option>
      <option>
	<name>No</name>
	<key>False</key>
      </option>
    </param>

    <param>
      <name>Check CRC32</name>
      <key>check_crc</key>
      <value>True</value>
      <type>enum</type>
      <option>
	<name>Yes</name>
	<key>True</key>
      </option>
      <option>
	<name>No</name>
	<key>False</key>
      </option>
    </param>

    <sink>
        <name>in</name>
        <type>message</type>
    </sink>

    <source>
        <name>out</name>
        <type>message</type>
    </source>
    <doc>
Packet encoder block, for use with the gnuradio modulator blocks: gmsk, dpsk, qam.

Access Code: string of 1's and 0's, leave blank for automatic.

Bits/Symbol should be set accordingly:
    gmsk -> 1
    dbpsk -> 1
    dqpsk -> 2
    d8psk -> 3
    qam8 -> 3
    qam16 -> 4
    qam64 -> 6
    qam256 -> 8
    </doc>
</block>
