<?xml version="1.0"?>
<!--
###################################################
##Packet Encoder
###################################################
 -->
<block>
    <name>Packet Framer</name>
    <key>mac_packet_framer</key>
    <import>import mac</import>
    <make>mac.packet_framer(
##    samples_per_symbol=$samples_per_symbol,
##    bits_per_symbol=$bits_per_symbol,
    access_code=$access_code,
	whitener_offset=$whitener_offset,
	rotate_whitener_offset=$whitener_offset,
	whiten=$whiten,
	preamble=$preamble,
	postamble=$postamble,
        crc_calc=$calc_crc
)</make>
    <!--<param>
        <name>Samples/Symbol</name>
        <key>samples_per_symbol</key>
        <type>int</type>
    </param>
    <param>
        <name>Bits/Symbol</name>
        <key>bits_per_symbol</key>
        <type>int</type>
    </param>-->
    <param>
        <name>Access code</name>
        <key>access_code</key>
        <value></value>
        <type>string</type>
    </param>
	<param>
        <name>Whitener offset</name>
        <key>whitener_offset</key>
        <value>0</value>
        <type>int</type>
    </param>
    <param>
		<name>Whiten</name>
		<key>whiten</key>
		<value>True</value>
		<type>enum</type>
		<!--<hide>#if str($dewhiten()) == 'True' then 'none' else 'part'#</hide>-->
		<option>
			<name>Yes</name>
			<key>True</key>
		</option>
		<option>
			<name>No</name>
			<key>False</key>
		</option>
    </param>
    <param>
		<name>Rotate Whitener</name>
		<key>rotate_whitener_offset</key>
		<value>False</value>
		<type>enum</type>
		<!--<hide>#if str($dewhiten()) == 'True' then 'none' else 'part'#</hide>-->
		<option>
			<name>Yes</name>
			<key>True</key>
		</option>
		<option>
			<name>No</name>
			<key>False</key>
		</option>
    </param>

    <param>
      <name>Preamble</name>
      <key>preamble</key>
      <value>''</value>
      <type>raw</type>
    </param>

    <param>
      <name>Postamble</name>
      <key>postamble</key>
      <value>''</value>
      <type>raw</type>
    </param>

    <param>
      <name>Calc CRC32</name>
      <key>calc_crc</key>
      <value>True</value>
      <type>enum</type>
      <option>
	<name>Yes</name>
	<key>True</key>
      </option>
      <option>
	<name>No</name>
	<key>False</key>
      </option>
    </param>

    <sink>
        <name>in</name>
        <type>message</type>
    </sink>
    <source>
        <name>out</name>
        <type>message</type>
    </source>
    <doc>
Packet encoder block, for use with the gnuradio modulator blocks: gmsk, dpsk, qam.

Access Code: string of 1's and 0's, leave blank for automatic.

Bits/Symbol should be set accordingly:
    gmsk -> 1
    dbpsk -> 1
    dqpsk -> 2
    d8psk -> 3
    qam8 -> 3
    qam16 -> 4
    qam64 -> 6
    qam256 -> 8
    </doc>
</block>
